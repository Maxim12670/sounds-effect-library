include ./constants

section.head
    .container
        header.header
            .header__logo
                img(src="../../assets/images/icons/WavesCo.svg" alt="logo")
            .header__wrapper
                .header__navigation
                    ul.header__list
                        each link in links
                            li.header__item
                                +Button({
                                    label: link.text,
                                    url: link.url,
                                })
                .header__btn
                    +Button({
                        label: 'Login', JClass: 'j-modal-on-login'
                    })
        .head__line
        .head__content
            h2.head__title Free download sound effects without copyright
            h3.head__subtitle 
                | Download free copyright sound effect for 
                | your YouTube video and any use.
            .head__holder
                input(
                    type="text",
                    placeholder="Search sound effects").head__input
                .head__search-icon
                h4.head__prompt
                    | Try keyword: happy, funny, natural, horror, jumpscare and more
            h4.head__descr 
                | 650.654 Available Sounds. Library Updated Weekly. See popular sounds
        .modal(style="display: none")
            .modal-window
                h2.modal-window__title Login
                ul.modal-window__brands
                    for item in brands
                        li.modal-window__item
                            img(src=item.url, alt=item.alt)
                h3.modal-window__subtitle or use your email
                .modal-window__form
                    label.modal-window__label(for="email") Email
                        input.modal-window__input#email(type="email" placeholder="Email")
                    label.modal-window__label(for="password") Password
                        input.modal-window__input#password(type="password" placeholder="Password")
                    label.modal-window__label(for="remember") Remember Me
                        input.modal-window__checkbox#password(type="checkbox")
                    .modal-window__btn
                        +Button({
                            label: 'Login'
                        })
                a.modal-window__link-registr(href="#") or Sing Up 
                a.modal-window__question(href="#") Forgot password?
            .modal__overlay

