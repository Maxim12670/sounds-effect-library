include ./constants

section.head.j-popup-block
  .container
    header.header
      .header__logo
        img(src="../../assets/images/icons/WavesCo.svg" alt="logo")
      .header__wrapper
        .header__navigation
          ul.header__list
            each link in links
              li.header__item
                +Button({
                  label: link.text,
                  url: link.url,
                })
        .header__btn
          +Button({
            label: 'Login', JClass: 'j-example-popup-button'
          })
    .head__line
    .head__content
      h2.head__title Free download sound effects without copyright
      h3.head__subtitle 
        | Download free copyright sound effect for 
        | your YouTube video and any use.
      .head__holder
        input(
          type="text",
          placeholder="Search sound effects").head__input
        .head__search-icon
        h4.head__prompt
          | Try keyword: happy, funny, natural, horror, jumpscare and more
      h4.head__descr 
        | 650.654 Available Sounds. Library Updated Weekly. See popular sounds
    include ./modules/popupBlock/PopupBlock
