extends ../../../../../../components/popup/Popup
block variables
  -
    var JClass = 'j-example-popup'

block content
  .modal-window
    h2.modal-window__title Login
    .modal-window__close.j-popup-close
    ul.modal-window__brands
      for item in brands
        li.modal-window__item
          img(src=item.url, alt=item.alt)
    h3.modal-window__subtitle or use your email
    .modal-window__form
      .modal-window__label.modal-window__label-email(for="email")
        +Input({
          type: 'email',
          placeholder: 'Email',
          label: 'Email'
        })
      .modal-window__label.modal-window__label-password(for="password")
        +Input({
          type: 'password',
          placeholder: 'Password',
          label: 'Password'
        })
      .modal-window__label.modal-window__label-check
        +Checkbox({
          label: 'Remember Me'
        })
      .modal-window__btn
        +Button({
          label: 'Login'
        })
    a.modal-window__link-registr(href="#") or Sing Up 
    a.modal-window__question(href="#") Forgot password?