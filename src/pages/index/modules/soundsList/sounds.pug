include ./constants

section.sounds
  .container
    h2.sounds__title 
      | Best sound effects for youtube videos
    nav.sounds__navigation
      ul.sounds__filter
        each link in linkFilter
          li.sounds__filter_item
            +Button({
              label: link.text,
              url: link.href
            })
      .sounds__button.j-filters-open
        button.sounds__navigation_btn Filter
          img(src='../../assets/images/icons/button/filterBtn.svg')
      .sounds__popup.j-filters
        include ./modules/popupFilter
    .sounds__list
      - for(var i = 0; i < 6; i++)
        .sounds__item
          button.sounds__btn
            img(src='../../assets/images/icons/button/playBtn.svg' alt="play button")
          .sounds__wrap
            h2.sounds__name= soundItem.soundName
            h3.sounds__time= soundItem.timer
          h2.sounds__descr= soundItem.descr
          h2.sounds__singer= soundItem.singer
          ul.sounds__button-list
            li
              button
                img(src='../../assets/images/icons/button/favoriteBtn.svg' alt="favorite button")
            li 
              button
                img(src='../../assets/images/icons/button/downloadBtn.svg' alt="download button")
            li 
              button
                img(src='../../assets/images/icons/button/moreBtn.svg' alt="more button")
    .sounds__link
      +Button({
        label: 'See all sound effects',
        url: '#',
        type: 'emit'
      })